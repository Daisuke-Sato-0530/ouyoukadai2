  
  
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col'>
      <% if user_signed_in? %>
        <div class="search-form">
          <%= form_tag(search_path, method: :get) do %>
            <%= text_field_tag 'search[content]' %>
            <%= select_tag 'search[model]', options_for_select({ "User" => "user", "Book" => "book" }) %>
            <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
            <%= submit_tag '検索', class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
    
    
      
      <% @datas.each do |data| %>
        <table>
        <% if @datas.model == User %>
            <td><%= attachment_image_tag(data, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
              <%= data.name %>
              <%= data.introduction %>
            <% else %>
              <%= attachment_image_tag(data.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
              <%= data.title %>
              <%= data.body %></td>
            </table>
          <% end %>
        <% end %>
      </table>
     </div>
   </div>
 </div>